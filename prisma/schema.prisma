// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Evento {
  id          Int    @id @default(autoincrement())
  data        String
  local       String
  name        String
  description String
  horario     String
}

model Campanha {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  link        String @default("")
}

model Tutoriais {
  id    Int     @id @default(autoincrement())
  name  String
  video String? @default("")
}
